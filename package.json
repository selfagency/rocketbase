{
	"name": "rocketbase",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "pnpx dotenv-cli -e .env.dynamic -- vite dev",
		"build": "vite build",
		"preview": "pnpx dotenv-cli -e .env.dynamic -- vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@loglayer/transport-consola": "^2.1.7",
		"@lucide/svelte": "^0.546.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.15",
		"@types/node": "^20",
		"@vitest/browser": "4.0.1",
		"clsx": "^2.1.1",
		"consola": "^3.4.2",
		"errsole": "^2.18.2",
		"errsole-sqlite": "^3.0.3",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-perfectionist": "^4.15.1",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"loglayer": "^6.10.0",
		"playwright": "^1.56.1",
		"pocketbase-queue": "^0.0.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"radashi": "^12.7.0",
		"svelte": "^5.41.2",
		"svelte-check": "^4.3.3",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.15",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.11",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "4.0.1",
		"vitest-browser-svelte": "2.0.0"
	}
}